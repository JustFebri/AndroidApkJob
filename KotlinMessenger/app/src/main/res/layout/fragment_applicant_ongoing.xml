<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFD572"
    tools:context=".ApplicantOngoingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvaCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="8dp"
            android:text="Company"
            android:textColor="#1F5A53"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="8dp"
            android:text="Job Title"
            android:textColor="#1F5A53"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvaCompany" />

        <TextView
            android:layout_width="94dp"
            android:layout_height="23dp"
            android:layout_marginStart="248dp"
            android:layout_marginTop="196dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="8dp"
            android:text="Applicant:"
            android:textColor="#1F5A53"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvaCompany" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="131dp"
            android:layout_height="23dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="196dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="8dp"
            android:text="From Company:"
            android:textColor="#1F5A53"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvaCompany" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="352dp"
            android:layout_marginEnd="55dp"
            android:fontFamily="sans-serif"
            android:text="finish"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvaTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>