<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#EFD572"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ongoingJobTitle"
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Job Title"
        android:textColor="#1F5A53"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ongoingJobEmployee"
        android:layout_width="251dp"
        android:layout_height="27dp"
        android:layout_marginStart="36dp"
        android:text="Employee"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="#1F5A53"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ongoingJobTitle" />

    <ImageButton
        android:id="@+id/ongoingJobdetails"
        android:layout_width="96dp"
        android:layout_height="91dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="#EFD572"
        app:layout_constraintStart_toEndOf="@+id/ongoingJobTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_search_24" />
</androidx.constraintlayout.widget.ConstraintLayout>