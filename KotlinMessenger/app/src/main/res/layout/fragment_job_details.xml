<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dt_acceptButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFD572"
    android:orientation="vertical"
    tools:context=".job_details">


    <TextView
        android:id="@+id/JobGiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Job Giver/Company"
        android:textColor="#1F5A53"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1F5A53"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:text="Title"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/dt_description"
        android:layout_width="match_parent"
        android:textColor="#1F5A53"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:text="Description"
        android:textSize="26sp" />

    <Button
        android:id="@+id/dt_apply"
        android:layout_width="250dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_height="63dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:text="apply" />
</LinearLayout>