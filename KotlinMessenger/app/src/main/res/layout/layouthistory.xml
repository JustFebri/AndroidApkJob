<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EFD572"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvhCompany"
        android:layout_width="282dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:paddingLeft="8dp"
        android:text="Company Name"
        android:textColor="#1F5A53"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvhTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:paddingLeft="8dp"
        android:text="Job Title"
        android:textColor="#1F5A53"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvhCompany" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvhDescription"
        android:text="Job Description"
        android:fontFamily="sans-serif"
        android:textColor="#1F5A53"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvhTitle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>