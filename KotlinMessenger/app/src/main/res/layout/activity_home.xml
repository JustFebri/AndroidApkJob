<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFD572"
    tools:context=".HomeActivity">

  <ProgressBar
      android:id="@+id/progbar"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <FrameLayout
      android:id="@+id/myframe"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/profimg">

  <LinearLayout
      android:layout_marginTop="16dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CFB75E"
        android:text="Lowongan Di Sekitar Anda"
        android:paddingLeft="16dp"
        android:textColor="#493B07"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"/>

    <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="16dp"
          android:background="#DDC66C"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/circleadd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama PT"
            android:textSize="16sp"
            android:textColor="#302E2E"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#302E2E"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Lowongan"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:background="#DDC66C"
          android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/circleadd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama PT"

            android:textSize="16sp"
            android:textColor="#302E2E"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#302E2E"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Lowongan"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:background="#DDC66C"
          android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/circleadd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama PT"

            android:textSize="16sp"
            android:textColor="#302E2E"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#302E2E"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Lowongan"/>
      </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="#CFB75E"
        android:text="Berita Terbaru Saat Ini"
        android:textColor="#493B07"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="16dp"
          android:background="#DDC66C"
          android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/circleadd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berita"
            android:textSize="16sp"
            android:textColor="#302E2E"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#302E2E"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Keterangan"/>
      </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
          android:background="#DDC66C"
        android:orientation="vertical">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          app:srcCompat="@drawable/circleadd" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Berita"
          android:textSize="16sp"
          android:textColor="#302E2E"
          android:textStyle="bold" />
      <TextView
          android:layout_width="wrap_content"
          android:textColor="#302E2E"
          android:textStyle="bold"
          android:layout_height="wrap_content"
          android:text="Keterangan"/>
    </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
          android:background="#DDC66C"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          app:srcCompat="@drawable/circleadd" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Berita"
          android:textSize="16sp"
          android:textColor="#302E2E"
          android:textStyle="bold" />
      <TextView
          android:layout_width="wrap_content"
          android:textColor="#302E2E"
          android:textStyle="bold"
          android:layout_height="wrap_content"
          android:text="Keterangan"/>
    </LinearLayout>


    </LinearLayout>


  </LinearLayout>


  </FrameLayout>

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:alpha="0.1"
      android:layout_marginTop="250dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/kkerjakuy" />

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/profimg"
      android:layout_width="55dp"
      android:layout_height="55dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_weight="4"
      android:background="@null"
      app:civ_border_color="#FF000000"
      app:civ_border_width="2dp"
      app:layout_constraintBottom_toBottomOf="@+id/progbar"
      app:layout_constraintEnd_toEndOf="@+id/progbar"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <SearchView
      android:layout_width="250dp"
      android:layout_height="30dp"
      android:layout_weight="2"
      android:background="@drawable/box"
      android:iconifiedByDefault="false"
      app:layout_constraintBottom_toBottomOf="@+id/profimg"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/profimg" />

  <ImageButton
      android:id="@+id/btn_chat"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:layout_weight="4"
      android:background="@null"
      android:src="@drawable/ic_baseline_chat_2_24"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomNavigationView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/my_navigation_items"
      android:background="#32776E"
      app:labelVisibilityMode="labeled"/>

</androidx.constraintlayout.widget.ConstraintLayout>