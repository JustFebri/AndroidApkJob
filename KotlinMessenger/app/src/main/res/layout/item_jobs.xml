<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:background="#EFD572">

    <TextView
        android:id="@+id/rv_jobtitle"
        android:layout_width="314dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Job Title"
        android:textColor="#32776E"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_jobdesc"
        android:layout_width="374dp"
        android:layout_height="53dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
        android:textColor="#32776E"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/rv_jobtitle"
        app:layout_constraintTop_toBottomOf="@+id/rv_jobtitle" />

    <ImageButton
        android:id="@+id/details"
        android:layout_width="52dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/rv_jobdesc"
        app:layout_constraintStart_toEndOf="@+id/rv_jobtitle"
        app:srcCompat="@drawable/ic_baseline_search_32" />

</androidx.constraintlayout.widget.ConstraintLayout>