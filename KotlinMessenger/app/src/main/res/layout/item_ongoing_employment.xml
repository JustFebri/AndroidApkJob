<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EFD572"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ongoingEmploymentJobtitle"
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Job Title"
        android:textColor="#1F5A53"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/OngoingEmploymentEmployer"
        android:layout_width="251dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="#1F5A53"
        android:text="Employer"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ongoingEmploymentJobtitle" />

    <ImageButton
        android:id="@+id/ongoingEmploymentDetails"
        android:layout_width="85dp"
        android:layout_height="84dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="#EFD572"
        app:layout_constraintStart_toEndOf="@+id/ongoingEmploymentJobtitle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_search_24" />
</androidx.constraintlayout.widget.ConstraintLayout>