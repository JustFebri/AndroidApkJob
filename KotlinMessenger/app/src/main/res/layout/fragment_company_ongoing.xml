<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFD572"
    tools:context=".CompanyOngoing">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvcNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="8dp"
            android:text="Nama"
            android:textColor="#1F5A53"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvcTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="8dp"
            android:text="Job Title"
            android:textColor="#1F5A53"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvcNama" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="94dp"
            android:layout_height="23dp"
            android:layout_marginStart="248dp"
            android:layout_marginTop="108dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="8dp"
            android:text="Applicant:"
            android:textColor="#1F5A53"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvcNama" />

        <ImageView
            android:id="@+id/ivaCompany"
            android:layout_width="103dp"
            android:layout_height="101dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_baseline_not_interested_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageView
            android:id="@+id/ivaAplicant"
            android:layout_width="103dp"
            android:layout_height="101dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_not_interested_24"
            app:layout_constraintStart_toEndOf="@+id/ivaCompany"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="131dp"
            android:layout_height="23dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="108dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="8dp"
            android:text="From Company:"
            android:textColor="#1F5A53"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvcNama" />

        <Button
            android:id="@+id/bcAccept"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:layout_marginTop="224dp"
            android:fontFamily="sans-serif"
            android:text="Accept"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.067"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvcTitle" />

        <Button
            android:id="@+id/bcDecline"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:layout_marginTop="224dp"
            android:fontFamily="sans-serif"
            android:text="Decline"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvcTitle" />

        <ImageButton
            android:id="@+id/ibaForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="#EFD572"
            android:src="@drawable/ic_baseline_arrow_forward_ios_48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bcDecline" />

        <ImageButton
            android:id="@+id/ibaBackward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:background="#EFD572"
            android:src="@drawable/ic_baseline_arrow_back_ios_48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bcAccept" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>